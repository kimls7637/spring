package ctrl;

import org.springframework.context.support.AbstractApplicationContext;
import org.springframework.context.support.GenericXmlApplicationContext;

import model.DAO;
import test.KiwiWatch;
import view.View;

public class Ctrl {
	private View view;
	private DAO dao;
	public Ctrl() {
		view;
		dao;
	}
	public void setView(KiwiWatch watch) {
		this.watch = watch;
		System.out.println("setter 주입 : watch");
	}
	public void startApp() {
		while(true) {
			int action = view.printMenu();
			if(action == 1) {
				view.printResult(dao.insert(view.getStr()));
			}
			else if(action == 2) {
				view.printDatas(dao.selectAll());
			}
			else {
				view.powerOff();
				break;
			}
		}
	}
}
